/**
  * @brief This function handles EXTI line0 interrupt.
  */
void EXTI0_IRQHandler(void)
{
  /* USER CODE BEGIN EXTI0_IRQn 0 */
	for(int n=0;n<1000000;n++);
	if (HAL_GPIO_ReadPin(GPIOA, GPIO_PIN_0))							// anti contact dender
	{
		//doe allen wat als de applicatie niet is draait
		if(start == 0){
			uint8_t song = (rand() % 5)+1;					// RANDOM getal modulo % 4 => 0, 1, 2, 3 of 4,  +1 => 1 t/m 5 (keuze liedje)
			uint8_t participant = (rand() % 4)+1;			// RANDOM getal modulo % 4 => 0, 1, 2, 3 of 4,  +1 => 1 t/m 5 (keuze naar wie het bericht toe moet)
			if (participant ==2 ){											// Start applicatie als de song op dit bordje moet worden afgespeeld
				start = 1;
				RxData[1]=song;
			}else{
				TxData[0]=participant;									// Stuur bericht naar andere deelnemers met welke song er gestart moet worden
				TxData[1]=song;
				HAL_CAN_AddTxMessage(&hcan1, &TxHeader, TxData, &TxMailbox);
			}
		}
	}

  /* USER CODE END EXTI0_IRQn 0 */
  HAL_GPIO_EXTI_IRQHandler(GPIO_PIN_0);
  /* USER CODE BEGIN EXTI0_IRQn 1 */

  /* USER CODE END EXTI0_IRQn 1 */
}

/**
  * @brief This function handles DMA1 stream5 global interrupt.
  */
void DMA1_Stream5_IRQHandler(void)
{
  /* USER CODE BEGIN DMA1_Stream5_IRQn 0 */

  /* USER CODE END DMA1_Stream5_IRQn 0 */
  HAL_DMA_IRQHandler(&hdma_spi3_tx);
  /* USER CODE BEGIN DMA1_Stream5_IRQn 1 */

  /* USER CODE END DMA1_Stream5_IRQn 1 */
}

/**
  * @brief This function handles CAN1 RX0 interrupts.
  */
void CAN1_RX0_IRQHandler(void)
{
  /* USER CODE BEGIN CAN1_RX0_IRQn 0 */



  /* USER CODE END CAN1_RX0_IRQn 0 */
  HAL_CAN_IRQHandler(&hcan1);
  /* USER CODE BEGIN CAN1_RX0_IRQn 1 */
	HAL_GPIO_WritePin(GPIOD, GPIO_PIN_12, GPIO_PIN_SET);
	  HAL_CAN_GetRxMessage(&hcan1, CAN_RX_FIFO0, &RxHeader, RxData);

	  if (RxData[0] == 2)
			  {
		  	  	  start = 1;
			  }else
			  {
				  start=0;

			  }



  /* USER CODE END CAN1_RX0_IRQn 1 */
}

/**
  * @brief This function handles TIM1 update interrupt and TIM10 global interrupt.
  */
